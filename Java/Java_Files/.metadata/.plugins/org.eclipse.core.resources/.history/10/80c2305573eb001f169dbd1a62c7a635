			System.out.println(name[i]);
		}
 
		for( String i: name)  //same as "for i in name"

		{

		System.out.println(i);
		}
		String str = " a man is 'him' thug life ";
		str= str.strip();
		System.out.println(str);
		String[] n = str.split("'");
		System.out.println(n[2].strip() + " white space removed");
		String[] b = {"a", "man", "him", " thug life"};    
		List<String> b1 = Arrays.asList(b); 
