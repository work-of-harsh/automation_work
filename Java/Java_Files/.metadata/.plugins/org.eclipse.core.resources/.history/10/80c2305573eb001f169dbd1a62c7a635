		int[] arr = new int[5];					// array length fixed to 5, initially unassigned array indexes are 0 by default.
		System.out.println(arr[2]);
		arr[0] = 1;
		arr[1] = 2;
		arr[2]= 4;
		arr[3]= 5;
		arr[4]= 6; 
		int[] arr2 = {1,2,3,4,5};
		System.out.println(arr2[0]);
		//for loop arr.length - 5
		for(int i = 0; i< arr.length; i++) //i takes value up to 4
		{
			System.out.println(arr[i]);
		}
		for (int i =0;i<arr2.length; i++)
		{
			System.out.println(arr2[i]);
