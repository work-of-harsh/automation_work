		System.out.println(myNum+" is the value stored in the myNum variable");  //variable + string

		System.out.println(website);

		//Arrays -
		int[] arr = new int[5];					// array length fixed to 5
		arr[0] = 1;
		arr[1] = 2;
		arr[2]= 4;
		arr[3]= 5;
		arr[4]= 6;
		int[] arr2 = {1,2,4,5,6};
		System.out.println(arr2[0]);
		//for loop arr.length - 5
		for(int i = 0; i< arr.length; i++) //i takes value up to 4
		{
			System.out.println(arr[i]);
		}
		for (int i =0;i<arr2.length; i++)
		{
			System.out.println(arr2[i]);
		}
		String[] name = {"rahul", "shetty", "selenium"};
		for(int i =0; i<name.length;i++)
		{
			System.out.println(name[i]);
		}
 
		for( String i: name)  //same as for(int i =0; i<name.length;i++).

		{

		System.out.println(i);
		}
		String str = "a man is 'him' thug life";
		String[] n = str.split("'");
